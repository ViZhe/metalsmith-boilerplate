
.b-form__label
  display: block

  &:not(:first-of-type)
    margin-top: rem(15px)


.b-form__field
  margin-top: 5px
  padding: 10px 15px
  width: 100%
  border: 0
  border-radius: 15px
  background: #e9e9e9
  box-shadow: inset 1.4px 1.5px 3px rgba(0, 0, 0, .3)
  color: $black
  transition: all .3s ease

  &:not(:disabled):hover
    box-shadow: inset 1.4px 1.5px 3px rgba(0, 0, 0, .5)

  &:focus
    box-shadow: inset 1.4px 1.5px 3px rgba(0, 0, 0, .8) !important

.b-form__field_textarea
  min-width: 100%
  min-height: 50px
  max-width: 100%
  resize: vertical
