
.b-text
  & p
    margin-bottom: rem(20px)

  & ul
  & ol
    margin-bottom: rem(20px)
    margin-left: rem(10px)
    padding: 0
    list-style-position: inside

  & li
    margin-bottom: em(5px)

  & table
    margin-bottom: em(20px)
    width: 100%

    & thead
      border: 1px solid $graylight
      border-bottom-width: 2px
      color: lighten($black, 30%)

      & th
        padding: 10px

    & tbody
      & td
      & th
        padding: 5px 10px
        border: 1px solid $graylight

  & blockquote
    margin: rem(20px) rem(30px)
    padding: em(10px) em(15px)
    border-left: 5px solid #75b674
    color: #333
    font-size: 1.2em

    & p:last-child
      margin-bottom: 0

  & b
    font-weight: bold

  & i
    font-style: italic

  & hr
    margin: rem(20px) 0
    border: 1px solid $graylight

  &__image-left
    float: left
    margin: rem(5px) rem(10px) rem(10px) 0

  &__image-right
    float: right
    margin: rem(5px) 0 rem(10px) rem(10px)
